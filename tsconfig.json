{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES6",
    "outDir": "dist",
    "strict": true,
    "lib": ["es6"],
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": ["src/**/*", "src/app.ts"],
  "exclude": ["node_modules"]
}
